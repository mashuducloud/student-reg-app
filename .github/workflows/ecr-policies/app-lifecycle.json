{
  "rules": [
    {
      "rulePriority": 10,
      "description": "Expire untagged images older than 7 days",
      "selection": {
        "tagStatus": "untagged",
        "countType": "sinceImagePushed",
        "countUnit": "days",
        "countNumber": 7
      },
      "action": { "type": "expire" }
    },
    {
      "rulePriority": 20,
      "description": "Keep last 20 backend-* tags; expire older ones",
      "selection": {
        "tagStatus": "tagged",
        "tagPrefixList": ["backend-"],
        "countType": "imageCountMoreThan",
        "countNumber": 20
      },
      "action": { "type": "expire" }
    },
    {
      "rulePriority": 30,
      "description": "Keep last 20 frontend-* tags; expire older ones",
      "selection": {
        "tagStatus": "tagged",
        "tagPrefixList": ["frontend-"],
        "countType": "imageCountMoreThan",
        "countNumber": 20
      },
      "action": { "type": "expire" }
    }
  ]
}
